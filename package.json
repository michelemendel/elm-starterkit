{
  "name": "elm-starter-kit",
  "version": "1.0.0",
  "description": "Elm",
  "main": "index.js",
  "author": "Michele Mendel",
  "repository": {
    "type": "git",
    "url": "https://github.com/michelemendel/elm-starterkit"
  },
  "license": "ISC",
  "keywords": [
    "elm",
    "web",
    "sass"
  ],
  "scripts": {
    "---- COPY index.html": "----------------------------------------------",
    "copy:index.html": "ncp src/index.html public/index.html",
    "---- INIT public folder": "----------------------------------------------",
    "clean:public": "rimraf public",
    "init:public": "npm-run-all clean:public copy:index.html",
    "---- BUILD HTML": "----------------------------------------------",
    "build:html": "elm-make src/Main.elm --output public/elm-index.html",
    "---- BUILD, WATCH ELM": "----------------------------------------------",
    "build:elm": "npm run init:public && elm-make src/Main.elm --output public/index.js",
    "watch:elm": "npm run init:public && elm-live --port=8000 src/Main.elm --output=public/index.js --dir=public --open",
    "---- BUILD, WATCH CSS": "----------------------------------------------",
    "build:css": "node-sass style/main.scss --source-map true -o public/",
    "prefix:css": "postcss --use autoprefixer -d public public/main.css",
    "minify:css": "cssmin < public/main.css >public/main.min.css",
    "postbuild:css": "npm-run-all minify:css",
    "postbuild:css-old": "npm-run-all prefix:css minify:css",
    "watch:css": "chokidar 'style/*.scss' -c 'npm run build:css' --initial",
    "---- BUILD ALL": "----------------------------------------------",
    "build": "npm-run-all build:elm build:css",
    "---- WATCH ALL": "----------------------------------------------",
    "start": "npm-run-all --parallel watch:elm watch:css",
    "---- TEST": "----------------------------------------------",
    "test": "echo \"Error: no test specified\" && exit 1",
    "---- MISC": "----------------------------------------------",
    "unlock": "sudo chown michelemendel:staff package.json",
    "env": "env"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "cross-env": "^5.0.5",
    "cssmin": "^0.4.3",
    "ncp": "^2.0.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1"
  }
}
